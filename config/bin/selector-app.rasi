window {
    background-color: rgba(0, 0, 0, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 10px;
}

listview {
    lines: 10;
    scrollbar: true;
    spacing: 5px;
}

element {
    border-radius: 6px;
    padding: 6px;
    background-color: transparent;
}

element selected {
    background-color: rgba(255, 255, 255, 0.1);
}

element-text {
    font: "JetBrainsMono Nerd Font 10";
    color: #ffffff;
}

element-icon {
    size: 1.2em;
}
